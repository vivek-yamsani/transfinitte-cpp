// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String              @id
  name                String
  phone               String              @db.Char(10)
  role                Role                @default(STUDENT)
  email               String
  password            String
  Announcement        Announcement[]
  Company_Application Company_Applicant[]
  departmentId        Int?
  department          Department?          @relation(fields: [departmentId], references: [id])
  company_id          Int?
  company             Company?            @relation(fields: [company_id], references: [id])

  @@map("Users")
}

model Company {
  id                    Int                 @id @default(autoincrement())
  name                  String
  cgpa_criteria         Decimal
  eligibile_departments String
  description           String              @db.Text
  Company_Application   Company_Applicant[]
  User                  User[]

  @@map("Companies")
}

model Company_Applicant {
  id                 Int     @id @default(autoincrement())
  company_id         Int
  company            Company @relation(fields: [company_id], references: [id])
  student_id         String
  student            User    @relation(fields: [student_id], references: [id])
  application_status Status  @default(INPROCESS)
}

model Announcement {
  id          Int          @id @default(autoincrement())
  title       String
  description String       @db.Text
  LastEdited  DateTime     @updatedAt
  author_id   String
  author      User         @relation(fields: [author_id], references: [id])
  departments Department[] @relation("Announcement_Department")

  @@map("Announcements")
}

model Department {
  id            Int            @id 
  name          String         @unique
  Users         User[]
  Announcements Announcement[] @relation("Announcement_Department")

  @@map("Departments")
}

enum Status {
  INPROCESS
  REJECTED
  SHORTLISTED
  PLACED
}

enum Role {
  ADMIN
  STUDENT
  REPRESENTATIVE
}
