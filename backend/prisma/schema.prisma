// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                 @id @default(autoincrement()) @map("roll_number")
  name                String
  phone               String              @db.VarChar(10)
  role                Role                @default(STUDENT)
  email               String
  password            String
  Announcement        Announcement[]
  Company_Application Company_Applicant[]
  departmentId        Int
  department          Department          @relation(fields: [departmentId], references: [id])

  @@map("Users")
}

model Company {
  id                    Int                 @id @default(autoincrement())
  name                  String
  cgpa_criteria         Decimal
  eligibile_departments String
  description           String              @db.Text
  Company_Application   Company_Applicant[]

  @@map("Companies")
}

model Company_Applicant {
  id             Int     @id @default(autoincrement())
  company_id     Int
  company        Company @relation(fields: [company_id], references: [id])
  student_id     Int
  student        User    @relation(fields: [student_id], references: [id])
  is_selected    Boolean @default(false)
  is_shortlisted Boolean @default(false)
}

model Announcement {
  id          Int          @id @default(autoincrement())
  description String       @db.Text
  LastEdited  DateTime     @updatedAt
  author_id   Int
  author      User         @relation(fields: [author_id], references: [id])
  Department  Department[] @relation("Announcement_Department")

  @@map("Announcements")
}

model Department {
  id            Int            @id @default(autoincrement())
  name          String
  Users         User[]
  Announcements Announcement[] @relation("Announcement_Department")

  @@map("Departments")
}

enum Role {
  ADMIN
  STUDENT
  REPRESENTATIVE
}
